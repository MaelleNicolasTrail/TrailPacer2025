{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Streamlit: Debug ",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}\\.venv\\Scripts\\streamlit.exe",
      "args": [
        "run",
        "${file}",
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}